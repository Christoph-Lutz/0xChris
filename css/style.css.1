nav ul.menu {
  display: flex !important;
  align-items: center !important;
  padding-left: 0;
}

nav ul.menu li {
  display: flex !important;
  align-items: center;
  list-style: none;
}

/* icon links */
nav ul.menu li.icon a {
  display: flex;
  align-items: center;
  color: #666;
  text-decoration: none;
}

/* icon images */
nav ul.menu li.icon img {
  width: 16px;
  height: 16px;
  display: block;
}

/* hover */
nav ul.menu li.icon a:hover {
  color: #000;
}

